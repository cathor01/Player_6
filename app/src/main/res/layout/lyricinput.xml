<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="200dp"
    android:background="@drawable/back"
    android:elevation="3dp"
    android:id="@+id/out_search">
    <TextView
        android:id="@+id/tttitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        android:text="下载在线歌词"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="#009688"
        />

    <TextView
        android:id="@+id/msearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="15%"
        android:gravity="center_vertical"
        android:text="搜索"
        android:layout_alignTop="@id/tttitle"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textSize="15sp"
        android:textColor="#009688"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/mtitle"
        android:layout_below="@id/msearch"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        style="@style/textinput"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:hint="@string/title_search"
            android:textColor="#555555"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mauthor"
        android:layout_width="match_parent"
        android:layout_below="@+id/mtitle"
        android:layout_margin="10dp"
        style="@style/textinput"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:hint="@string/author_search"
            android:textColor="#555555"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

</android.support.percent.PercentRelativeLayout>